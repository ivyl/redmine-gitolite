<h2><%= link_to l(:label_public_keys), public_keys_path %> &#187; <%=l(:label_public_key_new)%></h2>

<% if @gitolite_public_key.errors.any? %>
  <ul>
    <% @gitolite_public_key.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= labelled_form_for :public_key, @gitolite_public_key, :url => { :action => "create" }, :lang => current_language do |f| %>
	<%= render :partial => 'form', :locals => { :f => f } %>
	<%= submit_tag l(:button_create) %>
<% end %>

<% html_title(l(:label_public_keys)) -%>
